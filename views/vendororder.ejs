<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Vendor Menus</title>

    <!-- CSS/Vendor CSS cdn's -->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/user/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/buttons.css" type="text/css" />
    <link href="/styles/header.css" rel="stylesheet" type="text/css" />
    <link href="/styles/user/order.css" rel="stylesheet" type="text/css" />


    <!-- CDNS (bootstrap,jquery,fontaweseom) -->
    <link href="https://fonts.googleapis.com/css?family=Abril+Fatface" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous" />

    <!--  Vendor Scripts -->
    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/appaux.js"></script>
  </head>

  <body>
    <header>
      <% include ./partials/vendor/header.ejs %>
      <
        <nav id="nav">

          <ul class="menu_list">
<a href="/vendor/ordersaux/new"><button type="button" class="vendorMenus"> ADD NEW ORDER</button></a>

          <% orders.forEach(function(order) { %>
              <li class="menu" id=`"menu_<%= order.id %>">
                <a href="/vendor/ordersaux/<%= order.id %>"><%= order.id %></a>


              </li>

          <% }); %>

          </ul>
        </nav>
    </header>
    <section id="menu_items">
      <h1 class="menuname"><%= activeOrder.id %>


        </h1>
      <p class="description"><%= activeOrder.id %> </p>
      <p> customer info here - email phone name </p>
      <button type="button" class="vendorMenus"> Notify Customer </button>
      <!-- This include is what shows the item pop up -->
       <div class="line">

<% activeOrderItems.forEach(function(orderItem,index) { %>
<% if( (index + 1) % 3 === 0) { %>

    <%  } %>
        <div class="card">
          <img src="http://via.placeholder.com/275x150">
          <div class="card_body">
            <p> Menu ID <%= orderItem.id %> Food Item ID <%= orderItem.foodId %>  qty<%= orderItem.quanity %> foodid <%= orderItem.foodItem_id %></p>
            <p class="foodcat">food cat - <%= foodItems[orderItem.foodItem_id].category %></p>
            <p class="fooddesc">desc- <%= foodItems[orderItem.foodItem_id].description %></p>
            <p class="info">- unit <%= foodItems[orderItem.foodItem_id].price %></p>

          </div>
        </div>
        <% }) %>
      <div class="line">

      </div>
  </section>
  </body>
</html>
